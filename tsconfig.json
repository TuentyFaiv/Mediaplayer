{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "./lib",
    "baseUrl": "./",
    "moduleResolution": "node",
    "traceResolution": true,
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "./**/index.ts",
    "./**/Ads.ts",
    "./**/AutoPause.ts",
    "./**/AutoPlay.ts",
  ]
}