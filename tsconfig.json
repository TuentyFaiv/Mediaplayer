{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES6",
    "lib": [
      "DOM",
      "ESNext",
      "ES6"
    ],
    "allowJs": false,
    "sourceMap": true,
    "outDir": "./lib",
    "removeComments": true,
    "importHelpers": true,
    // "strict": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "traceResolution": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src/",
    "paths": {
      "@components/*": [
        "./components/*"
      ],
      "@icons/*": [
        "./icons/*"
      ],
      "@styles/*": [
        "./styles/*"
      ],
      "@utils": [
        "./utils/index.ts"
      ],
      "@interfaces": [
        "./utils/interfaces.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}